# ========================================
# FIT PATHWAY ORGANIZER - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Your Supabase project URL (found in your Supabase dashboard)
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key (found in your Supabase dashboard)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# GOOGLE OAUTH CONFIGURATION
# ========================================
# Google OAuth Client ID (from Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Google OAuth Redirect URI (must match your Google Cloud Console settings)
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/oauth-callback

# ========================================
# SERVER-SIDE ENVIRONMENT VARIABLES
# ========================================
# These are used in Supabase Edge Functions only
# DO NOT expose these in client-side code

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Google OAuth Client Secret (for server-side token exchange)
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google OAuth Redirect URI (server-side)
GOOGLE_REDIRECT_URI=http://localhost:5173/oauth-callback

# ========================================
# PAYMENT PROCESSING (STRIPE)
# ========================================
# Stripe Secret Key (for subscription management)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# ========================================
# PUSH NOTIFICATIONS (FIREBASE)
# ========================================
# Firebase Admin SDK Configuration
FIREBASE_ADMIN_PROJECT_ID=your_firebase_project_id_here
FIREBASE_ADMIN_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----\n"

# ========================================
# AI SERVICES
# ========================================
# OpenRouter API Key (for AI fitness coach)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ========================================
# EMAIL SERVICES
# ========================================
# Resend API Key (for email notifications)
RESEND_API_KEY=your_resend_api_key_here

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Your application's base URL
SITE_URL=https://your-domain.com

# Environment (development, staging, production)
NODE_ENV=development

# ========================================
# SECURITY CONFIGURATION
# ========================================
# JWT Secret (for additional security)
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
MAX_REQUESTS_PER_WINDOW=100

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Database connection pool size
DB_POOL_SIZE=10

# ========================================
# MONITORING & ANALYTICS
# ========================================
# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Enable debug logging (set to false in production)
DEBUG=false

# Enable detailed error messages (set to false in production)
SHOW_DETAILED_ERRORS=false 